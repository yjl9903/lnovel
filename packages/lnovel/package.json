{
  "name": "lnovel",
  "version": "0.0.4",
  "description": "Scrapes light novels from various websites and converts them into EPUB format e-books",
  "keywords": [
    "cli",
    "epub",
    "light-novels",
    "wenku8",
    "轻小说",
    "轻小说文库"
  ],
  "homepage": "https://github.com/yjl9903/lnovel#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/lnovel/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/lnovel.git"
  },
  "license": "AGPL-3.0",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "lnovel": "cli.mjs"
  },
  "files": [
    "*.mjs",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit --jsx preserve"
  },
  "dependencies": {
    "@breadc/color": "^0.9.7",
    "@clack/prompts": "^0.11.0",
    "@epubook/core": "^0.0.11",
    "axios": "^1.13.2",
    "breadc": "^0.9.7",
    "cheerio": "1.0.0-rc.12",
    "death": "^1.1.0",
    "epubook": "^0.0.11",
    "iconv-lite": "^0.7.2",
    "image-size": "^1.2.1",
    "p-limit": "^7.2.0",
    "pino": "^9.14.0",
    "pino-pretty": "^11.2.1",
    "set-cookie-parser": "^3.0.1",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=v20.0.0"
  }
}
