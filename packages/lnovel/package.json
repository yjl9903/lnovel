{
  "name": "lnovel",
  "version": "0.0.4",
  "description": "从哔哩轻小说、轻小说文库等站点抓取书籍, 提供轻小说开放接口和 RSS 订阅",
  "keywords": [
    "cli",
    "epub",
    "light-novels",
    "wenku8",
    "轻小说",
    "轻小说文库"
  ],
  "homepage": "https://github.com/yjl9903/lnovel#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/lnovel/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/lnovel.git"
  },
  "license": "AGPL-3.0",
  "author": "XLor",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "lnovel": "cli.mjs"
  },
  "files": [
    "*.mjs",
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit --jsx preserve"
  },
  "dependencies": {
    "@breadc/color": "^0.9.7",
    "@breadc/death": "^0.9.7",
    "@clack/prompts": "^1.0.1",
    "@epubook/core": "^0.0.11",
    "bilinovel": "workspace:*",
    "breadc": "^0.9.7",
    "epubook": "^0.0.11",
    "yaml": "^2.8.2"
  },
  "engines": {
    "node": ">=v20.0.0"
  }
}
