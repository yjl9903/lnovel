{
  "name": "lnovel",
  "version": "0.0.2",
  "description": "Scrapes light novels from various websites and converts them into EPUB format e-books",
  "keywords": [
    "cli",
    "epub",
    "light-novels",
    "wenku8",
    "轻小说",
    "轻小说文库"
  ],
  "homepage": "https://github.com/yjl9903/lnovel#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/lnovel/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/lnovel.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "lnovel": "cli.mjs"
  },
  "files": [
    "*.mjs",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@breadc/color": "^0.8.9",
    "axios": "^1.3.4",
    "breadc": "^0.8.9",
    "cheerio": "1.0.0-rc.12",
    "death": "^1.1.0",
    "epubook": "^0.0.5",
    "iconv-lite": "^0.6.3",
    "inquirer": "^9.1.4",
    "ora": "^6.1.2",
    "p-limit": "^4.0.0",
    "pino": "^8.11.0",
    "pino-pretty": "^9.4.0",
    "set-cookie-parser": "^2.5.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.31",
    "@types/death": "^1.1.2",
    "@types/inquirer": "^9.0.3",
    "@types/set-cookie-parser": "^2.4.2",
    "vitest": "^0.29.2"
  },
  "engines": {
    "node": ">=v18.14.2"
  }
}
