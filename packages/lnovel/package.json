{
  "name": "lnovel",
  "version": "0.0.4",
  "description": "Scrapes light novels from various websites and converts them into EPUB format e-books",
  "keywords": [
    "cli",
    "epub",
    "light-novels",
    "wenku8",
    "轻小说",
    "轻小说文库"
  ],
  "homepage": "https://github.com/yjl9903/lnovel#readme",
  "bugs": {
    "url": "https://github.com/yjl9903/lnovel/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yjl9903/lnovel.git"
  },
  "license": "MIT",
  "author": "XLor",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "lnovel": "cli.mjs"
  },
  "files": [
    "*.mjs",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "test": "vitest",
    "test:ci": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@breadc/color": "^0.9.7",
    "@clack/prompts": "^0.7.0",
    "@epubook/core": "^0.0.11",
    "axios": "^1.7.2",
    "breadc": "^0.9.7",
    "cheerio": "1.0.0-rc.12",
    "death": "^1.1.0",
    "epubook": "^0.0.11",
    "iconv-lite": "^0.6.3",
    "image-size": "^1.1.1",
    "p-limit": "^5.0.0",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "set-cookie-parser": "^2.6.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/death": "^1.1.5",
    "@types/set-cookie-parser": "^2.4.9",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=v20.0.0"
  }
}