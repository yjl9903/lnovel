{
  "name": "@lnovel/monorepo",
  "version": "0.0.4",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write '**/*.{ts,js,mjs}'",
    "lnovel": "tsx packages/lnovel/src/cli.ts",
    "release": "bumpp package.json apps/*/package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public",
    "test:ci": "turbo run test:ci",
    "typecheck": "turbo run typecheck",
    "preversion": "turbo run test:ci",
    "postversion": "turbo run build",
    "worker:deploy": "pnpm -C apps/worker run deploy",
    "worker:dev": "pnpm -C apps/worker run dev"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251126.0",
    "@types/cheerio": "^0.22.35",
    "@types/death": "^1.1.5",
    "@types/node": "^24.10.1",
    "@types/set-cookie-parser": "^2.4.9",
    "bumpp": "latest",
    "prettier": "^3.6.2",
    "tsdown": "^0.16.7",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.2.4",
    "vitest": "^4.0.14",
    "wrangler": "^4.50.0"
  },
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=v20.10.0"
  }
}